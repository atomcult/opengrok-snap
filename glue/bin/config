#!/bin/sh

# list of supported keys
keys="HTTP_PORT HTTPS_PORT OPENGROK_SRC_ROOT OPENGROK_DATA_ROOT WEBAPP_NAME"

# default values
DESCRIPTION_HTTP_PORT="http port OpenGrok's tomcat webserver is exposed on, atter change restart service"
DEFAULT_HTTP_PORT="8080"
KEY_HTTP_PORT="http-port"

DESCRIPTION_HTTPS_PORT="https port OpenGrok's tomcat webserver is exposed on, atter change restart service"
DEFAULT_HTTPS_PORT="8443"
KEY_HTTPS_PORT="https-port"

DESCRIPTION_OPENGROK_SRC_ROOT="Source directory OpenGrok will index"
DEFAULT_OPENGROK_SRC_ROOT="${SNAP_COMMON}/src"
KEY_OPENGROK_SRC_ROOT="src-dir"

DESCRIPTION_OPENGROK_DATA_ROOT="Data directory OpenGrok will store index"
DEFAULT_OPENGROK_DATA_ROOT="${SNAP_COMMON}/data"
KEY_OPENGROK_DATA_ROOT="data-dir"

DESCRIPTION_WEBAPP_NAME="Name of webapp"
DEFAULT_WEBAPP_NAME="source"
KEY_WEBAPP_NAME="webapp-name"
